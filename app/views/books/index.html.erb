<%= link_to '投稿フォーム', new_book_path %>


<div class="container">
  <div class="row">
    <div class="col-md-3" style="background-color: orange;">
      <h2>サイドバー</h2>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table>
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
